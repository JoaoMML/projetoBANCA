<section class="content-header">
    <h1>
        Exercícios
        <small> - Novo </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Nova</a></li>
        <li class="active">Exercicios</li>
    </ol>

</section>

<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Cadastro de Exercícios:</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Ampliar/Reduzir">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">

            <form id="meuform" class="form-horizontal" action="/Exercicio/AdicionaExercicio" method="post">
                @*@Html.AntiForgeryToken()*@

                <!-- Text input-->

                <div class="form-body no-space">
                    <div class="col-md-4 noPaddingRight">
                        <div class="form-group sem-margem-bottom divExercicio">
                            <label class="control-label label_exercicio h6 text-danger"><strong>Exercício</strong></label>
                            <input id="nome" name="exercicio.ExercicioNome" type="text" placeholder="Digite aqui.." class="form-control input-md">
                        </div>
                    </div>
                    <div class="col-md-1 noPaddingRight">
                        <div class="form-group sem-margem-bottom">
                            <label class="control-label h6 text-danger"><strong>Série</strong></label>
                            <input id="series" name="exercicio.Series" type="text" class="form-control input-md">
                            <span class="help-block series-nulo display-none">Obrigatório</span>
                        </div>
                    </div>
                    <div class="col-md-1 noPaddingRight">
                        <div class="form-group sem-margem-bottom">
                            <label class="control-label h6 text-danger"><strong>Repetições</strong></label>
                            <input id="repeticoes" name="exercicio.Repeticoes" type="text" placeholder="" class="form-control input-md">
                            <span class="help-block repeticoes-nulo display-none">Obrigatório</span>
                        </div>
                    </div>
                    <div class="col-md-1 noPaddingRight">
                        <div class="form-group sem-margem-bottom">
                            <label class="control-label h6 text-danger"><strong>Carga</strong></label>
                            <input id="carga" name="exercicio.Carga" type="text" placeholder="" class="form-control input-md">
                        </div>
                    </div>
                    <div class="col-md-1 noPaddingRight">
                        <div class="form-group sem-margem-bottom">
                            <label class="control-label h6 text-danger"><strong>Intervalo</strong></label>
                            <input id="intervalo" name="exercicio.Intervalo" type="text" placeholder="" class="form-control input-md">
                            <span class="help-block repeticoes-nulo display-none">Obrigatório</span>
                        </div>
                    </div>

                    <div class="col-md-2 noPaddingRight" style=" padding-top: 35px; ">
                        <button class="btn bg-blue fa fa-check"></button>
                    </div>
                    <div class="clearfix"></div>
                </div>
               

            </form>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">

        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
