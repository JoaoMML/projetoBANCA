   <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cadastro de Funcionários
        <small> - Novo(a) </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Home/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cadastro</a></li>
        <li class="active">Funcionarios</li>
    </ol>
</section>

<!-- Main content -->
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Dados Pessoais:</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Ampliar/Reduzir">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">

            <form id="meuform" class="form-horizontal" action="/Funcionario/AtualizaFuncionario" method="post">
                @*@Html.AntiForgeryToken()*@

                <input type="hidden" name="funcionario.Id" value="@ViewBag.Funcionario.Id" />
                <input type="hidden" name="funcionario.PessoaId" value="@ViewBag.Funcionario.Pessoa.Id" />

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="nome">Nome:</label>
                    <div class="col-md-3">
                        <input id="nome" name="funcionario.pessoa.Nome" value="@ViewBag.Funcionario.Pessoa.Nome" type="text" placeholder="Digite aqui o nome.." class="form-control input-md">

                    </div>
                </div>
                <div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="dataNascimento">Data de Nascimento:</label>
                        <div class="col-md-2">
                            <input id="nasc" name="funcionario.pessoa.DataNascimento" value="@ViewBag.Funcionario.Pessoa.DataNascimento" type="datetime" placeholder="Dia / Mês / Ano" class="form-control input-md">

                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="rg">RG:</label>
                        <div class="col-md-3">
                            <input id="rg" name="funcionario.pessoa.Rg" value="@ViewBag.Funcionario.Pessoa.Rg" type="text" placeholder="Digite aqui o RG.." class="form-control input-md">
                            <span class="help-block">*apenas números*</span>
                        </div>
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="cpf">CPF:</label>
                        <div class="col-md-3">
                            <input id="cpf" name="funcionario.pessoa.Cpf" value="@ViewBag.Funcionario.Pessoa.Cpf" type="text" placeholder="Digite aqui o CPF.." class="form-control input-md">
                            <span class="help-block">*apenas números*</span>
                        </div>
                    </div>
                </div>

                <!-- Multiple Radios -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="genero">Gênero:</label>
                    <div class="col-md-4">
                        <div class="radio">
                            <label for="genero-0">
                                <input type="radio" name="funcionario.pessoa.Genero" value="@ViewBag.Funcionario.Pessoa.Genero" id="genero-0" value="M" checked="checked">
                                Masculino
                            </label>
                        </div>
                        <div class="radio">
                            <label for="genero-1">
                                <input type="radio" name="funcionario.pessoa.Genero" value="@ViewBag.Funcionario.Pessoa.Genero" id="genero-1" value="F">
                                Feminino
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="estadoCivil">Estado Civil:</label>
                    <div class="col-md-2">
                        <select id="estadoCivil" name="funcionario.pessoa.EstadoCivil" class="form-control">
                            <option value=""></option>
                            @{
                                var options = new List<string>();

                                var estadosCivis = new Dictionary<string, string>();
                                estadosCivis.Add("Solteiro", "Solteiro(a)");
                                estadosCivis.Add("Casado", "Casado(a)");
                                estadosCivis.Add("Separado", "Separado(a)");
                                estadosCivis.Add("Divorciado", "Divorciado(a)");
                                estadosCivis.Add("Viúvo", "Viúvo(a)");

                                foreach (var estado in estadosCivis)
                                {
                                    if (estado.Key == ViewBag.Funcionario.Pessoa.EstadoCivil)
                                    {
                                        options.Add($"<option selected value={estado.Key}>{estado.Value}</option>");
                                    }
                                    else
                                    {
                                        options.Add($"<option value={estado.Key}>{estado.Value}</option>");
                                    }
                                }

                                foreach (var option in options)
                                {
                                    @(new HtmlString(option));
                                }
                            }
                        </select>
                    </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="email">Email:</label>
                    <div class="col-md-4">
                        <input id="email" name="funcionario.pessoa.Email" value="@ViewBag.Funcionario.Pessoa.Email" type="text" placeholder="Digite o email.." class="form-control input-md">

                    </div>
                </div>



                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="fone">Telefone Celular:</label>
                    <div class="col-md-4">
                        <input id="fone" name="funcionario.pessoa.Fone" value="@ViewBag.Funcionario.Pessoa.Fone" type="text" placeholder="Digite o telefone principal.." class="form-control input-md">
                        <span class="help-block">*apenas números*</span>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="fone2">Telefone:</label>
                    <div class="col-md-4">
                        <input id="fone2" name="funcionario.pessoa.Fone2" value="@ViewBag.Funcionario.Pessoa.Fone2" type="text" placeholder="Digite o telefone secundário.." class="form-control input-md">
                        <span class="help-block">*apenas números*</span>
                    </div>
                </div>

                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Informações de Endereço:</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                    title="Ampliar/Reduzir">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="cep">Cep:</label>
                            <div class="col-md-4">
                                <input id="cep" name="funcionario.pessoa.endereco.Cep" value="@ViewBag.Funcionario.Pessoa.Endereco.Cep" type="text" placeholder="Informe o cep.." class="form-control input-md">
                                <span class="help-block">*apenas números*</span>
                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="rua">Rua:</label>
                            <div class="col-md-4">
                                <input id="rua" name="funcionario.pessoa.endereco.Rua" value="@ViewBag.Funcionario.Pessoa.Endereco.Rua" type="text" placeholder="Digite aqui a rua.." class="form-control input-md">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="bairro">Bairro:</label>
                            <div class="col-md-4">
                                <input id="bairro" name="funcionario.pessoa.endereco.Bairro" value="@ViewBag.Funcionario.Pessoa.Endereco.Bairro" type="text" placeholder="Digite o Bairro.." class="form-control input-md">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="numero">N°:</label>
                            <div class="col-md-2">
                                <input id="numero" name="funcionario.pessoa.endereco.Numero" value="@ViewBag.Funcionario.Pessoa.Endereco.Numero" type="text" placeholder="Digite o numero da casa,apto..." class="form-control input-md">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="complemento">Complemento:</label>
                            <div class="col-md-4">
                                <input id="complemento" name="funcionario.pessoa.endereco.Complemento" value="@ViewBag.Funcionario.Pessoa.Endereco.Complemento" type="text" placeholder="Casa,apto,conj,etc.." class="form-control input-md">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="cidade">Cidade:</label>
                            <div class="col-md-3">
                                <input id="cidade" name="funcionario.pessoa.endereco.Cidade" value="@ViewBag.Funcionario.Pessoa.Endereco.Cidade" type="text" placeholder="Digite o nome da cidade.." class="form-control input-md">

                            </div>
                        </div>

                        <!-- Select Basic -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="estado">Estado</label>
                            <div class="col-md-4">
                                <select id="estado" name="funcionario.pessoa.endereco.Estado" value="@ViewBag.Funcionario.Pessoa.Endereco.Estado" class="form-control">
                                    <option value=""></option>
                                    <option value="AC">AC</option>
                                    <option value="AL">AL</option>
                                    <option value="AP">AP</option>
                                    <option value="AM">AM</option>
                                    <option value="BA">BA</option>
                                    <option value="CE">CE</option>
                                    <option value="DF">DF</option>
                                    <option value="ES">ES</option>
                                    <option value="GO">GO</option>
                                    <option value="MA">MA</option>
                                    <option value="MT">MT</option>
                                    <option value="MS">MS</option>
                                    <option value="MG">MG</option>
                                    <option value="PA">PA</option>
                                    <option value="PB">PB</option>
                                    <option value="PR">PR</option>
                                    <option value="PE">PE</option>
                                    <option value="PI">PI</option>
                                    <option value="RJ">RJ</option>
                                    <option value="RN">RN</option>
                                    <option value="RS">RS</option>
                                    <option value="RO">RO</option>
                                    <option value="RR">RR</option>
                                    <option value="SC">SC</option>
                                    <option value="SP">SP</option>
                                    <option value="SE">SE</option>
                                    <option value="TO">TO</option>
                                </select>
                            </div>
                        </div>

                        <!-- Text input-->

                    </div>
                </div>

                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Informações de Login:</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                    title="Ampliar/Reduzir">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="nome">Nome Usuário:</label>
                            <div class="col-md-3">
                                <input id="usuario" name="funcionario.NomeDeUsuario" value="@ViewBag.Funcionario.NomeDeUsuario" type="text" placeholder="Digite aqui o nome.." class="form-control input-md">

                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="tipoDeAcesso">Tipo de Acesso:</label>
                            <div class="col-md-4">
                                <select id="tipoDeAcesso" name="funcionario.TipoDeAcesso" value="@ViewBag.Funcionario.TipoDeAcesso" class="form-control" required>
                                    <option>Selecione</option>
                                    <option value="Adm">Administrador</option>
                                    <option value="Funcionario">Funcionário</option>
                                </select>
                            </div>
                        </div>

                        <!-- Text input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="cargo">Cargo:</label>
                            <div class="col-md-4">
                                <input id="cargo" name="funcionario.Cargo" value="@ViewBag.Funcionario.Cargo" type="text" placeholder="Digite aqui o cargo.." class="form-control input-md">
                            </div>
                        </div>

                        <!-- Password input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="senhaSistema">Senha:</label>
                            <div class="col-md-4">
                                <input id="senhaSistema" name="funcionario.Senha" value="@ViewBag.Funcionario.Senha" type="password" placeholder="Digite a senha.." class="form-control input-md">

                            </div>
                        </div>
                        <!-- Password input-->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="senhaSistema2">Digite a senha novamente:</label>
                            <div class="col-md-4">
                                <input id="senhaSistema2" name="repetindoASenha" type="password" placeholder="Digite a senha.." class="form-control input-md">

                            </div>
                        </div>

                    </div>
                </div>
                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-5 control-label" for="cadastrar"></label>
                    <div class="col-md-6">
                        <button id="cadastrar" type="submit" name="cadastrar" class="btn btn-success">Finalizar</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">

        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>

@section Index_scripts{
    <script src="~/Content/Template/plugins/Validation/Funcionario.js"></script>
}