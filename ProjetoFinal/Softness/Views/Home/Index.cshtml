   <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cadastro de Pessoas
        <small> - </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cadastro</a></li>
        <li class="active">Pessoas</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Novo(a)</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form action="/Usuario/AdicionaPessoa">

                <div class="col-md-7">
                    <label for="nome">Nome:</label>
                    <input id="nome" class="form-control" name="nome" />
                </div>

                <div class="col-md-7">
                    <div class="form-group">
                        <label for="dataNascimento">Data de Nascimento:</label>
                        <input id="dataNascimento" class="form-control" name="dataNascimento" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="rg">RG:</label>
                        <input class="form-control" id="rg" name="rg" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="cpf">CPF:</label>
                        <input class="form-control" id="cpf" name="cpf" />
                    </div>
                </div>

                <div class="col-md-6">
                    <label>Telefone:</label>
                    <div class="input-group">
                        <div class="input-group-addon controle-caixa">
                            <i class="fa fa-phone"></i>
                        </div>
                        <input type="text" class="form-control" data-inputmask="&quot;mask&quot;: &quot;(999) 999-9999&quot;" data-mask="">
                    </div>
                </div>

                <div class="col-md-6">
                    <label>Telefone 2:</label>
                    <div class="input-group">
                        <div class="input-group-addon controle-caixa">
                            <i class="fa fa-phone"></i>
                        </div>
                        <input type="text" class="form-control" data-inputmask="&quot;mask&quot;: &quot;(999) 999-9999&quot;" data-mask="(999) 999-9999">
                    </div>
                </div>

                <div class="col-md-6">
                    <input class="button-a-soft" type="submit" name="submit" value="Salvar" autofocus>
                </div>
            </form>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
