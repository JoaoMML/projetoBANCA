@{ 
    Layout = null;
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cadastro de Pessoas
        <small> - </small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Cadastro</a></li>
        <li class="active">Pessoas</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h2 class="box-title"> Novo(a) </h2>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="form-group">
                    <label> Código: </label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="cliente.pessoa.Id" />

                    </div>

                    <div class="form-group">
                        <label> Nome: </label>
                        <div class="input-group">

                            <input type="text" class="form-control" name="cliente.pessoa.Nome" id="ClienteNome">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>CPF:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="cliente.pessoa.Cpf" id="ClienteCpf">
                    </div>
                </div>

                <div class="form-group">
                    <label>RG:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="cliente.pessoa.Rg" id="ClienteRg">
                    </div>
                </div>

                <div class="form-group">
                    <label> Situação: </label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="cliente.pessoa.Situacao" id="ClienteSituacao">
                    </div>
                </div>

                <div class="form-group">
                    <label>Nascimento:</label>

                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="date" class="form-control">
                    </div>
                    <!-- /.input group -->
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="Nome">Nascimento<h11></h11></label>
                    <div class="col-md-2">
                        <input id="Data" name="funcionario.pessoa.Data" value="" placeholder="DD/MM/AAAA" class="form-control input-md" required="" type="date" maxlength="10" OnKeyPress="formatar('##/##/####', this)" onBlur="showhide()">
                    </div>

                    <!-- Multiple Radios (inline) -->

                    <label class="col-md-1 control-label" for="radios">Gênero <h11></h11></label>
                    <div class="col-md-4">
                        <label required="" class="radio-inline" for="radios-0">
                            <input name="funcionario.pessoa.Genero" id="sexo" value="M" type="radio" required>
                            Masculino
                        </label>
                        <label class="radio-inline" for="radios-1">
                            <input name="funcionario.pessoa.Genero" id="sexo" value="F" type="radio">
                            Feminino
                        </label>
                    </div>
                </div>

                <!-- /.box-body -->
                <div class="box-footer">
                    Fitness.com
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
<!-- /.content -->
